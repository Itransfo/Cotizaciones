        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProductFamily)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductFamily)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProviderPrice)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProviderPrice)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Currency)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Currency)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AdditionalData)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AdditionalData)
        </dd>

    </dl>
</div>
